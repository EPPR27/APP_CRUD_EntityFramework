@model APP_CRUD_EntityFramework.Models.ViewModels.EmpleadoVM

@{
    ViewData["Title"] = "Empleado_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.oEmpleado.Idempleado == 0)
{
    <h1>Crear Empleado</h1>
}
else
{
    <h1>Editar Empleado</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Empleado_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oEmpleado.Idempleado" />
            <div class="mb-2">
                <label class="form-control" asp-for="oEmpleado.NomEmp">NombreCompleto</label>
                <input class="form-control form-control-sm" asp-for="oEmpleado.NomEmp" type="text"/>
            </div>
            <div class="mb-2">
                <label class="form-control" asp-for="oEmpleado.MailEmp">Correo</label>
                <input class="form-control form-control-sm" asp-for="oEmpleado.MailEmp" type="text" />
            </div>
            <div class="mb-2">
                <label class="form-control" asp-for="oEmpleado.TelEmp">Teléfono</label>
                <input class="form-control form-control-sm" asp-for="oEmpleado.TelEmp" type="text" />
            </div>
            <div class="mb-3">
                <label class="form-control" asp-for="oEmpleado.Idcargo">Cargo</label>
                <select class="form-select form-select-sm" asp-for="oEmpleado.Idcargo" asp-items="@Model.oListaCargo">
                    <option selected disabled>--Seleccione Cargo--</option>
                </select>
            </div>
            <div class="mb-2">
                @if(Model.oEmpleado.Idempleado==0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
            </div>
        </form>
    </div>
</div>

