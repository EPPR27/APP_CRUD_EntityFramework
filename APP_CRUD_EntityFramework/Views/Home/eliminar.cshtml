@model APP_CRUD_EntityFramework.Models.Empleado
@{
    ViewData["Title"] = "eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">¿Esta seguro de Eliminar el registro?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">
        <form asp-action="eliminar" asp-controller="Home" method="post">
            <input type="hidden" asp-for="Idempleado" />
            <div class="mb-2">
                <label class="form-control" asp-for="NomEmp">NombreCompleto</label>
                <input class="form-control form-control-sm" asp-for="NomEmp" type="text" />
            </div>
            <div class="mb-2">
                <label class="form-control" asp-for="MailEmp">Correo</label>
                <input class="form-control form-control-sm" asp-for="MailEmp" type="text" />
            </div>
            <div class="mb-2">
                <label class="form-control" asp-for="TelEmp">Teléfono</label>
                <input class="form-control form-control-sm" asp-for="TelEmp" type="text" />
            </div>
            <div class="mb-3">
                <label class="form-control" asp-for="Idcargo">Cargo</label>
                <input class="form-control form-control-sm" asp-for="oCargo.DesCargo" type="text" />
            </div>
            <div class="mb-2">
                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
            </div>
        </form>
    </div>
</div>

